import static java.lang.System.*;

public class AtCounter
{
   private char[][] atMat;
   private int atCount;

	public AtCounter()
	{
		atCount=0;
		atMat = new char[][]{{'@','-','@','-','-','@','-','@','@','@'},
									{'@','@','@','-','@','@','-','@','-','@'},
									{'-','-','-','-','-','-','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','-','@'},
									{'-','@','-','@','-','@','-','@','-','@'},
									{'@','@','@','@','@','@','-','@','@','@'},
									{'-','@','-','@','-','@','-','-','-','@'},
									{'-','@','@','@','-','@','-','-','-','-'},
									{'-','@','-','@','-','@','-','@','@','@'},
									{'-','@','@','@','@','@','-','@','@','@'}};
	}

	public int countAts(int r, int c)
	{
		//add in recursive code to count up the # of @s connected
		//start checking at spot [r,c]
		while((atMat[r][c] == '@' && r <= 9 && c <= 9) == true){		
			atCount++;
			
		}
		return 0;
	}

	public int getAtCount(int r, int c)
	{
		countAts(r+1, c);
		countAts(r-1, c);
		countAts(r, c+1);
		countAts(r, c-1);
		return atCount;
	}

	public String toString()
	{
		String output="";
		output += getAtCount(0,0) + " @s connected.";
		return output;
	}
}